<html>

<head>
    <title>NotSoSecure Banking</title>
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <script type="text/javascript" src="./js/bootstrap.js"></script>
</head>
<style>
    table {
        counter-reset: tableCount;
    }

    .counterCell:before {
        content: counter(tableCount);
        counter-increment: tableCount;
    }
</style>


<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a style="margin-left: 20px;" class="navbar-brand" href="#">NotSoSecureBank</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0" id="leftNavItems">
                <li class="nav-item"><a class="nav-link active" aria-current="page" href="/dashboard">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/addpayee">AddPayee</a></li>
                <li class="nav-item"><a class="nav-link" href="/fundtransfer">TransferFund</a></li>
                <li class="nav-item"><a class="nav-link" href="/transactions">Transactions</a></li>
            </ul>
        </div>
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0" style="margin-right: 20px;" id="rightNavItems">
                <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <table class="table" style="margin-top: 50px;">
            <thead class="table-secondary">
                <tr>
                    <th scope="col" style="width:200px;">Date</th>
                    <th scope="col">Firstname</th>
                    <th scope="col">Lastname</th>
                    <th scope="col">Account Number</th>
                    <th scope="col">Amount</th>
                </tr>
            </thead>
            <tbody>
                <% for(var count=0; count <transactions.length; count++) { %>
                    <tr>
                        <td>
                            <%=transactions[count].date %>
                        </td>
                        <td>
                            <%=transactions[count].firstname %>
                        </td>
                        <td>
                            <%=transactions[count].lastname %>
                        </td>
                        <td>
                            <%=transactions[count].to_account_number %>
                        </td>
                        <td>
                            <%=transactions[count].amount %>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>